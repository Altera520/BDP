[Unit]
Description=HBase Regionserver Service
Wants=network.target network-online.target
After=network.target network-online.target

[Service]
Type=forking
PIDFile={{ hbase_run_dir }}/hbase-regionserver.pid
User=hbase
ExecStart={{ stack_root }}/hbase/bin/hbase-daemon.sh start regionserver
ExecStop={{ stack_root }}/hbase/bin/hbase-daemon.sh stop regionserver
Restart=no
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target