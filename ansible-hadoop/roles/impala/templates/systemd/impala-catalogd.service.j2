[Unit]
Description=Apache Impala Catalog Daemon
Documentation=http://impala.apache.org
[Service]
EnvironmentFile={{ stack_root }}/impala/conf/impala.env
ExecStart={{ stack_root }}/impala/sbin/catalogd --flagfile={{ impala_conf_dir }}/catalogd.gflagfile
TimeoutStopSec=5
Restart=on-failure
User=impala
[Install]
WantedBy=multi-user.target
